<!DOCTYPE html>
<html>

<head>
    <title>Gaming News</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <link href="/stylesheets/style.css" type="text/css" rel="stylesheet">
    <script src="/javascripts/angularApp.js"></script>
    <style>
        .glyphicon-thumbs-up {
            cursor: pointer;
        }
    </style>
</head>

<body ng-app="flapperNews">
  <nav class="navbar navbar-default navbar-static-top" ng-controller="NavCtrl">
      <div class="container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                      data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#/home">Gaming News</a>
          </div>
          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <p ng-show="ctrl.isLoggedIn()" class="navbar-text navbar-right">
                  Signed in as {{ctrl.currentUser()}}
              </p>
              <ul class="nav navbar-nav navbar-left">
                      <li ng-show="isLoggedIn()"><a href="#" ng-click="ctrl.logOut()">Log Out</a></li>
                      <li ng-hide="isLoggedIn()"><a href="#/login">Log In</a></li>
                      <li ng-hide="isLoggedIn()"><a href="#/register">Register</a></li>
              </ul>
          </div>
          <!-- /.navbar-collapse -->
      </div>
      <!-- /.container-fluid -->
  </nav>
    <div class="row">
        <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
            <ui-view></ui-view>
        </div>
    </div>
    <script type="text/ng-template" id="/home.html">
        <div class="page-header">
            <h1>Gaming News</h1>
        </div>
        <div class="table-responsive">
        <table class="table">
          <tr>
            <th>News</th>
            <th>Date</th>
            <th>Upvotes</th>
            <th>Downvotes</th>
            <th>Author</th>
            <th></th>
          </tr>
          <tr ng-repeat="post in posts">
            <td>
              <h5><a href="">{{post.title}}</a></h5>
              <p>{{post.summary}}</p>
            </td>
            <td>
              {{post.date | date:'dd-MM-yyyy'}}
            </td>
            <td>
              {{post.upvotes}} |
              <span class="glyphicon glyphicon-thumbs-up green" ng-click="incrementUpvotes(post)"></span>
            </td>
            <td>
              {{post.downvotes}} |
              <span class="glyphicon glyphicon-thumbs-down red" ng-click="incrementDownvotes(post)"></span>
            </td>
            <td>
              {{post.author}}
            </td>
            <td>
              <a href="#/posts/{{post._id}}"><span class="glyphicon glyphicon-comment"></span></a>
            </td>
          </tr>
        </table>
        </div>
        <a href="#/addnewpost" ng-show="isLoggedIn()">Add news</a>
    </script>
    <script type="text/ng-template" id="/addnewpost.html">
      <h3>Add news</h3>
      <form style="margin-top:30px;" ng-show="isLoggedIn()" ng-submit="addPost()">

          <div ng-hide="isLoggedIn()">
            <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a post.</h3>
          </div>
          <div class="form-group">
              <input type="text" class="form-control" placeholder="Title" ng-model="title"></input>
          </div>

          <div class="form-group">
              <input type="text" class="form-control" placeholder="Link" ng-model="link"></input>
          </div>

          <button class="btn btn-primary" type="submit">Post</button>
      </form>
    </script>
    <script type="text/ng-template" id="/posts.html">
        <div class="page-header">
            <h3>{{post.title}}</h3>
        </div>
        <p>
          {{post.body}}
        </p>
        <div ng-repeat="comment in post.comments | orderBy:'-upvotes'">
            <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(comment)"></span> {{comment.upvotes}} - by {{comment.author}}
            <span style="font-size:20px; margin-left:10px;">
                    {{comment.body}}
                </span>
        </div>

        <form ng-submit="addComment()" ng-show="isLoggedIn" style="margin-top:30px;">
            <h3>Add a new comment</h3>
            <div ng-hide="isLoggedIn()">
              <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can comment.</h3>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Comment" ng-model="body"></input>
            </div>
            <button type="submit" class="btn btn-primary">Post</button>
        </form>
    </script>
    <script type="text/ng-template" id="/register.html">
        <div class="page-header">
            <h1>Gaming News</h1>
        </div>

        <div ng-show="error" class="alert alert-danger row">
            <span>{{ error.message }}</span>
        </div>

        <form ng-submit="register()" style="margin-top:30px;">
            <h3>Register</h3>

            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </script>
    <script type="text/ng-template" id="/login.html">
        <div class="page-header">
            <h1>Flapper News</h1>
        </div>

        <div ng-show="error" class="alert alert-danger row">
            <span>{{ error.message }}</span>
        </div>

        <form ng-submit="logIn()" style="margin-top:30px;">
            <h3>Log In</h3>

            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
            </div>
            <button type="submit" class="btn btn-primary">Log In</button>
        </form>
    </script>
</body>

</html>
